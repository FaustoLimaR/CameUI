<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:id="@+id/content_element"
    app:cardElevation="@dimen/card_view_elevation"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/general_margin"
    app:cardCornerRadius="@dimen/card_view_corner_radius"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/layoutContenedorItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/paddin_detail_item_socio">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imageSocio"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@color/black"/>

            <com.kokonutstudio.came.cameui.customView.StyleTextView
                style="@style/TextViewGruposNombreGrupo"
                android:layout_width="wrap_content"
                android:id="@+id/tvNombreGrupo"
                android:layout_marginLeft="@dimen/general_margin"
                android:gravity="left"
                android:layout_toRightOf="@+id/imageSocio"
                android:layout_centerVertical="true"
                android:text="Semana 19"/>


            <com.kokonutstudio.came.cameui.customView.StyleTextView
                style="@style/TextHeaderActualizadosDetalleSocio"
                android:gravity="center"
                android:text="No enviada"
                android:layout_marginRight="@dimen/general_margin"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:tipo="bold"/>


        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/general_margin"
            android:orientation="horizontal">

            <com.kokonutstudio.came.cameui.customView.DatoGeneralView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:defaultIcon="@mipmap/ic_launcher"
                app:gravityValor="left"
                app:tipoValor="bold"
                android:layout_weight="1"/>

            <com.kokonutstudio.came.cameui.customView.DatoGeneralView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tipoValor="bold"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.kokonutstudio.came.cameui.customView.DatoGeneralView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:defaultIcon="@mipmap/ic_launcher"
                app:tipoValor="bold"
                android:layout_weight="1"/>

            <com.kokonutstudio.came.cameui.customView.DatoGeneralView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tipoValor="bold"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>




