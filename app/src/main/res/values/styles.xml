<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DetalleSocioHorizontalLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="DetalleSocioItems">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/margin_item_detalle_socio</item>
    </style>


    <style name="TituloItemDetalleSocio">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/title_item_soc</item>
        <item name="android:textSize">@dimen/text_size_title_item_soc</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="ValorItemDetalleSocio">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/text_detail_soc</item>
        <item name="android:textSize">@dimen/text_size_value_item_soc</item>
        <item name="android:gravity">center</item>
    </style>




    <style name="TextHeaderDetalleSocio">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_titles</item>
        <item name="android:textSize">@dimen/text_size_title_item_soc</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="TextHeaderActualizadosDetalleSocio">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/tabs_disable</item>
        <item name="android:textSize">@dimen/text_size_title_item_soc</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/paddin_estatus_datos_socio</item>
        <item name="android:background">@drawable/background_estatus_datos_socio</item>
    </style>



    <style name="TextViewEtiquetaDato">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/title_item_soc</item>
        <item name="android:textSize">@dimen/text_size_dato_general</item>
        <item name="android:paddingRight">@dimen/margin_item_dato_general</item>
        <item name="android:layout_marginLeft">@dimen/margin_item_dato_general</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewValorDato">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/title_item_soc</item>
        <item name="android:paddingRight">@dimen/margin_item_dato_general</item>
        <item name="android:textSize">@dimen/text_size_dato_general</item>
        <item name="android:gravity">center</item>
    </style>


    <!--Detalle Grupo-->
    <style name="TextViewGruposNombreGrupo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/title_item_soc</item>
        <item name="android:textSize">@dimen/text_size_nombre_grupo</item>
        <item name="android:gravity">left</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="ButtonTransparent" parent="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/background_rounder_transparent</item>
        <item name="android:textSize">@dimen/text_size_btn</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/general_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_btn</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
